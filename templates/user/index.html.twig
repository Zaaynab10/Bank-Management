<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
		<link rel="stylesheet" href="{{ asset('css/home_user.css') }}">
        <link rel="stylesheet" href="{{ asset('css/header.css') }}">
		{% block body %}

			<header>
				<nav>
					<a href="/user/home"><h1>VOTRE ESPACE PERSONNEL</h1></a>
					<div>
						<a href="">Se deconnecter</a>
						<img src="" alt="Photo de profil"></div>
				</nav>
			</header>
			<section class="banniere-acceuil">
				<div class="solde-accueil">
					<div class="banniere">
						<div class="text-banniere">
							<p class="text-banniere-p">Votre solde actuel
								<br>
								est de :</p>
							<p class="text-banniere-solde">1 234,56€</p>
						</div>
						<div class="boutons-banniere">
							<button>RECEVOIR</button>
							<button>RECEVOIR</button>
							<button>RECEVOIR</button>
							<button>RECEVOIR</button>
						</div>
					</div>
					<img src="{{ asset('images/photo-banniere.png') }}" alt="image-de-fond">
				</div>
			</section>
			<main>
				<div class="bloc">
					<div class="titre-bloc">
						<a href="/user/transactions"><h2>Dernières transactions</h2></a>
					</div>
					<ul class="liste-transactions">
						{% if transactions is defined and transactions is not empty %}
							{% for transaction in transactions %}
								<li class="transaction-item">
									<div class="transaction-info">
										<span class="date">{{ transaction.date | date('d/m/Y') }}</span>
										<span class="description">{{ transaction.description }}</span>
									</div>
									<div class="transaction-montant {{ transaction.amount < 0 ? 'negative' : 'positive' }}">
										{{ transaction.amount | number_format(2, ',', ' ') }}
										€
									</div>
								</li>
							{% endfor %}
						{% else %}
							<li>Aucune transaction récente disponible.</li>
						{% endif %}
					</ul>
				</div>
			</div>
			<div class="bloc">
				<div class="titre-bloc">
					<h2>Mes comptes</h2>
				</div>
				<ul class="liste-comptes">
					{% if accounts is defined and accounts is not empty %}
						{% for account in accounts %}
							<li class="compte-item">
								<div class="compte-info">
									<strong>{{ account.name }}</strong>
									<span>Type :
										{{ account.type }}</span>
								</div>
								<div class="compte-balance">
									{{ account.balance | number_format(2, ',', ' ') }}
									€
								</div>
							</li>
						{% endfor %}
					{% else %}
						<li>Aucun compte disponible.</li>
					{% endif %}
				</ul>
			</div>
			<div class="bloc">
				<div class="titre-bloc">
					<h2>Mes contacts</h2>
				</div>
				<div class="contact-info">
					<p>
						<strong>Conseiller :</strong>
						{{ advisor.name }}</p>
					<p>
						<strong>Email :</strong>
						<a href="mailto:{{ advisor.email }}">{{ advisor.email }}</a>
					</p>
					<p>
						<strong>Téléphone :</strong>
						<a href="tel:{{ advisor.phone }}">{{ advisor.phone }}</a>
					</p>
					<p>
						<strong>Agence :</strong>
						{{ advisor.agency }}</p>
				</div>
			</div>
		</head>
	</html>
</main>{% endblock %}</head></html>
