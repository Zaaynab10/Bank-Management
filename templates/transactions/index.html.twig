{% extends 'base.html.twig' %}

{% block title %}Transactions{% endblock %}

{% block body %}
    <h1>Transactions de votre compte {{ bankAccount.id }}</h1>
    
    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Type de Transaction</th>
                <th>Montant</th>
                <th>Statut</th>
            </tr>
        </thead>
        <tbody>
            {% for transaction in transactions %}
                <tr>
                    <td>{{ transaction.type.value }}</td> 
                    <td>{{ transaction.amount }}</td> 
                    <td>{{ transaction.status.value }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucune transaction trouv√©e.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
