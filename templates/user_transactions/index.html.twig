{# <!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Votre Espace Bancaire{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    <link rel="stylesheet" href="{{ asset('css/header.css') }}">
    <link rel="stylesheet" href="{{ asset('css/transaction.css') }}">
</head>
<body>
{% block body %}
<header>
    <nav>
        <a href="/user/home"><h1>VOTRE ESPACE PERSONNEL</h1></a>
        <div>
            <a href="/logout">Se déconnecter</a>
            <img src="{{ asset('images/profile.jpg') }}" alt="Photo de profil">
        </div>
    </nav>
</header>
<div class="main-content">
    <!-- Section gauche -->
    <div class="left-section">
        <h2>Solde du Compte : <span id="account-balance">{{ account.balance | number_format(2, ',', ' ') }} €</span></h2>
        <button id="change-account">Changer de compte</button>
        <div class="alerts">
            <h3>Vigilances</h3>
            <p>{% if alerts is empty %}Aucune alerte pour l'instant.{% else %}{{ alerts }}{% endif %}</p>
        </div>
        <div class="shortcuts">
            <form action="{{ path('app_deposit', {'bankAccountId': account.id, 'amount': 100}) }}" method="post">
                <button type="submit">Déposer 100 €</button>
            </form>
            <form action="{{ path('app_withdraw', {'bankAccountId': account.id, 'amount': 50}) }}" method="post">
                <button type="submit">Retirer 50 €</button>
            </form>
            <form action="{{ path('app_transfer', {'sourceAccountId': account.id, 'destinationAccountId': anotherAccountId, 'amount': 50}) }}" method="post">
                <button type="submit">Faire un virement</button>
            </form>
            <button id="download-history">Télécharger l'historique</button>
        </div>
    </div>

    <!-- Section droite -->
    <div class="right-section">
        <div class="transactions">
            <h3>Transactions</h3>
            <ul id="transaction-list">
                {% for transaction in transactions %}
                    <li>
                        <span>{{ transaction.dateTime | date('d/m/Y H:i') }}</span> - 
                        <span>{{ transaction.type }}</span> - 
                        <span>{{ transaction.amount | number_format(2, ',', ' ') }} €</span> - 
                        <span>{{ transaction.status }}</span>
                    </li>
                {% else %}
                    <li>Aucune transaction trouvée.</li>
                {% endfor %}
            </ul>
        </div>
        <div class="pagination">
            {% for i in 1..pagination.totalPages %}
                <button class="page-btn" data-page="{{ i }}">{{ i }}</button>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
</body>
</html> #}