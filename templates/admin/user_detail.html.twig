{% extends 'base.html.twig' %}

{% block title %}Détails de l'utilisateur
{% endblock %}

{% block body %}
	<div
		class="user-detail-page">

		<!-- Background Video -->
		<video autoplay loop muted playsinline class="background-video">
			<source src="{{ asset('videos/light-background.mp4') }}" type="video/mp4">
			Your browser does not support the video tag.
		</video>


		<!-- Header -->
		<header class="user-header">
			<img src="{{ asset('images/user.svg') }}" alt="Photo de profil" class="user-photo">
			<div class="user-info">
				<h1>{{ user.firstName }}
					{{ user.lastName }}</h1>
				<p>Email :
					{{ user.email }}</p>
				<p>Téléphone :
					{{ user.phone }}</p>
			</div>
		</header>

		<!-- Content Sections -->
		<main
			class="user-main">
			<!-- Section 1: Infos comptes -->
			<section class="user-accounts">
				<h2>Comptes bancaires</h2>
				<ul>
					{% for account in bankAccounts %}
						<li>
							<p>Numéro :
								{{ account.number }}</p>
							<p>Type :
								{{ account.type }}</p>
							<p>Solde :
								{{ account.balance }}
								€</p>
						</li>
					{% else %}
						<li>Aucun compte bancaire trouvé.</li>
					{% endfor %}
				</ul>
			</section>

			<section class="user-transactions">
				<h2>Transactions</h2>
				<ul>
					{% for transaction in transactions %}
						<li>
							<p>Montant :
								{{ transaction.amount }}
								€</p>
							<p>Date :
								{{ transaction.date_time|date('d/m/Y') }}</p>
							<p>Type :
								{{ transaction.type }}</p>
							<p>Statut :
								{{ transaction.status }}</p>
						</li>
					{% else %}
						<li>Aucune transaction trouvée.</li>
					{% endfor %}
				</ul>
			</section>


			<!-- Section 3: Demandes - Contact -->
			<section class="user-requests">
				<h2>Demandes - Contact</h2>
				<p>Ajoute ici les infos nécessaires à propos des demandes ou contacts.</p>
			</section>
		</main>

		<!-- Footer Navigation -->
		<footer class="user-footer">
			<div class="navigation-arrows">
				<button class="nav-left">←</button>
				<button class="nav-right">→</button>
			</div>
			<div class="pagination-dots">
				<span class="dot active"></span>
				<span class="dot"></span>
				<span class="dot"></span>
			</div>
		</footer>
	</div>
{% endblock %}
